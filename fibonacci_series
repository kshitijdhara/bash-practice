#!/bin/bash
set -x

echo "Each new term in the Fibonacci sequence is generated by adding the previous two terms. By starting with  and , the first terms will be:

By considering the terms in the Fibonacci sequence whose values do not exceed four million, find the sum of the even-valued terms."

sum=
a=1
b=2
echo $a
echo $b
until [ $a -ge 4000000 ]; do
	if [ $((b % 2)) -eq 0 ]; then
		sum=$((sum + b))
	fi
	b=$((a + b))
	echo $b
	a=$((b - a))
	
done
echo "Sum of the sequence is = $sum"
